#!/bin/bash
set -euo pipefail

for token in $@; do
    if [ "$token" = "-h" ] || [ "$token" = "--help" ]; then
        echo description: clear uncommited backup state 1>&2
        echo 1>&2
        echo usage: backup-reset 1>&2
        exit 1
    fi
done

cd $BACKUP_ROOT/.backup
git reset HEAD &>/dev/null
git add .
git reset --hard >/dev/null
