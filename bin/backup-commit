#!/bin/bash
set -euo pipefail

export LC_ALL=C
cd ~/.backup

status() { git status -s | sed -r 's/ +/ /g'; }
if ! ([ -z "$(status)" ] || [ 'M index' = "$(status)" ]); then
    echo error: ~/.backup working directory not clean
    status
    exit 1
fi

backup-diff | backup-partition | while read path; do
        cat $path \
        | backup-tar  \
        | lz4 \
        | gpg -esv --no-armor \
        | tee >(xxh64 > $path.xxh64) \
        | pv -r \
        | backup-put $path > put
    rm $path
done

dest=$(cat put | sed -r 's/\.[0-9]+$//')
rm put
git add index
git commit -m "
backup-commit
$dest
$(for path in *.xxh64; do
    echo $(echo $path | sed s/\.xxh64//) $(cat $path)
    rm $path
done)
"

git push
